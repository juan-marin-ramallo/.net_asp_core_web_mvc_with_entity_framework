@model IEnumerable<WebApplicationMVC.Models.Coche>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Marca)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Modelo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Color)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrecioHoraAlquiler)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Marca)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Modelo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Color)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrecioHoraAlquiler)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Placa">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Placa">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Placa">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
