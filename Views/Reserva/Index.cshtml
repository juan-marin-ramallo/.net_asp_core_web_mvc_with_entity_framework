@model IEnumerable<WebApplicationMVC.Models.Reserva>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FechaInicio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaFin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrecioTotalReserva)
            </th>
            <th>
                Cliente
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FechaInicio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaFin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrecioTotalReserva)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CodClienteNavigation.Nombre)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.NumeroReserva">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.NumeroReserva">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.NumeroReserva">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
